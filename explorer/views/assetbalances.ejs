<% include header %>

<h1>Asset Balances</h1>

<div class="row actions">
<a class="btn btn-info" href="/asset">Assets</a>
<a class="btn btn-info" href="/asset/<%= asset.id %>">Asset</a>
</div>

<div class="row">
    <table class="table-striped table-bordered">
        <tr>
            <th>Account</th>
            <th>Balance</th>
        </tr>
    <% balances.forEach(function (balance) { %>
        <tr>
            <td><%= balance.account.name %></td>
            <td><%= balance.amount %></td>
        </tr>
    <% }); %>
    </table>
</div>

<% include footer %>
